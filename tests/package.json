{
  "name": "secman-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Secman application",
  "main": "index.js",
  "scripts": {
    "test:api": "jest --testPathPattern=api --verbose",
    "test:ui": "playwright test",
    "test:e2e": "npm run test:api && npm run test:ui",
    "test:watch": "jest --watch --testPathPattern=api",
    "setup": "node scripts/setup-test-env.js",
    "cleanup": "node scripts/cleanup-test-env.js"
  },
  "keywords": [
    "secman",
    "e2e",
    "testing",
    "api",
    "ui"
  ],
  "author": "Secman Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "mariadb": "^3.2.0"
  }
}
