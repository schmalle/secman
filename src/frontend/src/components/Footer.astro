---
import { execSync } from 'child_process';

let lastCommitDate = '2025-06-08'; // fallback
try {
  lastCommitDate = execSync('git log -1 --format="%cd" --date=short', { encoding: 'utf8' }).trim();
} catch (error) {
  console.warn('Could not get git commit date:', error);
}
---

