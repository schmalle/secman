---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Notification Logs">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mt-4 mb-4">Notification Audit Logs</h1>
                <p class="text-muted">View and filter all notification emails sent by the system. This page is only accessible to administrators.</p>

                <div id="notification-logs-container"></div>
            </div>
        </div>
    </div>
</Layout>

<script>
    import { createRoot } from 'react-dom/client';
    import { createElement } from 'react';
    import NotificationLogs from '../components/NotificationLogs';

    // Mount React component
    const container = document.getElementById('notification-logs-container');
    if (container) {
        const root = createRoot(container);
        root.render(createElement(NotificationLogs));
    }
</script>
