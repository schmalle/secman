<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for CLI output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger - default to WARN level -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- CLI package - INFO level for normal operation -->
    <logger name="com.secman.cli" level="INFO" />

    <!-- CrowdStrike API client - INFO level for verbose query logging -->
    <logger name="com.secman.crowdstrike" level="INFO" />

    <!-- Micronaut framework - WARN to reduce noise -->
    <logger name="io.micronaut" level="WARN" />

    <!-- HTTP client - INFO for debugging API calls -->
    <logger name="io.micronaut.http.client" level="INFO" />
</configuration>
