<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="testPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>models.User</class>
        <class>models.Standard</class>
        <class>models.Norm</class>
        <class>models.Requirement</class>
        <class>models.UseCase</class>
        <class>models.Asset</class>
        <class>models.Risk</class>
        <class>models.RiskAssessment</class>
        <class>models.Response</class>
        <class>models.EmailConfig</class>
        <class>models.AssessmentToken</class>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.connection.autocommit" value="false"/>
        </properties>
    </persistence-unit>
</persistence>