{
  "mcpServers": {
    "secman": {
      "command": "java",
      "args": [
        "-cp",
        "target/scala-2.13/classes:target/scala-2.13/lib/*",
        "mcp.MCPServerLauncher"
      ],
      "cwd": "/path/to/secman/src/backend",
      "env": {
        "SECMAN_API_KEY": "your-username:your-api-key-here"
      }
    }
  }
}